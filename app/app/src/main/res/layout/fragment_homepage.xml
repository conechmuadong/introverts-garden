<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/background">
    <LinearLayout
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/avatar_background"
            android:padding="5dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar"
                android:scaleType="fitStart"/>
    </LinearLayout>
    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avatar"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/manrope_bold"
            android:textSize="14sp"
            android:textColor="#9BA1AA"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_toEndOf="@id/avatar"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/tt_hoves_bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="@string/hello"
            />
    <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bld"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/gardens"/>
    <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:layout_alignParentEnd="true"
            android:text="@string/more"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bld"
            android:textColor="#9BA1AA"
            android:layout_marginEnd="40dp"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/garden_list_container"
            android:layout_height="150dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_below="@id/list_title"
            >

        <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/garden_list"
                android:divider="@drawable/solid_space"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/garden_list_container"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_bld"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="@string/tips"/>
    <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/garden_list_container"
            android:layout_alignParentEnd="true"
            android:text="@string/more"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_bld"
            android:textColor="#9BA1AA"
            android:layout_marginEnd="40dp"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            />
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/tips_list_container"
            android:layout_height="250dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_below="@id/tips_title"
            >
        <RelativeLayout
                android:id="@+id/tip_1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/avatar_background"
                >
            <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_1"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/tipthumbnail1"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/tip_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thumbnail_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_bld"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/tip1_title"/>
            <TextView
                    android:layout_below="@id/tip_title_1"
                    android:layout_toEndOf="@id/thumbnail_1"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip1_author"/>
                    />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/tip_2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/avatar_background"
                android:layout_below="@id/tip_1"
                android:layout_marginTop="5dp"
                >
            <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_2"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/thumbnail2"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/tip_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thumbnail_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_bld"
                    android:textSize="11.5sp"
                    android:textColor="@color/black"
                    android:text="@string/tip2_title"/>
            <TextView
                    android:layout_below="@id/tip_title_2"
                    android:layout_toEndOf="@id/thumbnail_2"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip2_author"/>
            />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/tip_3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/avatar_background"
                android:layout_below="@id/tip_2"
                >
            <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_3"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/thumbnail5"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/tip_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thumbnail_3"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_bld"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/tip3_title"/>
            <TextView
                    android:layout_below="@id/tip_title_3"
                    android:layout_toEndOf="@id/thumbnail_3"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip3_author"/>
            />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>