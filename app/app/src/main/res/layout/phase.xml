<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="10dp">
    <LinearLayout
            android:layout_width="144dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_green"
            android:gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:id="@+id/stage"
            >
        <TextView
            android:id="@+id/stageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:fontFamily="@font/manrope_bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>
    <EditText
            android:id="@+id/stageHumidEdit"
            android:gravity="center_vertical"
            android:layout_width="144dp"
            android:layout_height="56dp"
            android:background="@drawable/edit_text_box"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:fontFamily="@font/manrope_bold"
            android:hint="@string/humidity"
            android:drawableStart="@drawable/drop"
            android:padding="10dp"
            />
    <RelativeLayout
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/stage"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
        <TextView
                android:id="@+id/startDate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:fontFamily="@font/manrope_bold"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                />
        <EditText
                android:id="@+id/stageStartDate"
                android:layout_width="144dp"
                android:layout_height="56dp"
                android:background="@drawable/edit_text_box"
                android:layout_below="@id/startDate_title"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:hint="@string/start_date"
                android:inputType="date"
                android:drawableStart="@drawable/callendar"
                android:drawablePadding="10dp"
                android:padding="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/stage"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            >
        <TextView
                android:id="@+id/endDate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:fontFamily="@font/manrope_bold"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                />
        <EditText
                android:id="@+id/stageEndDate"
                android:layout_width="144dp"
                android:layout_height="56dp"
                android:background="@drawable/edit_text_box"
                android:layout_below="@id/endDate_title"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/manrope_bold"
                android:hint="@string/end_date"
                android:inputType="date"
                android:drawableStart="@drawable/callendar"
                android:drawablePadding="10dp"
                android:padding="10dp"
                />

    </RelativeLayout>
</RelativeLayout>