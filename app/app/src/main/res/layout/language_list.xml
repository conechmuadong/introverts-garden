<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fieldname_background">
    <RelativeLayout
        android:id="@+id/menu_button_container"
        android:layout_width="338dp"
        android:background="@drawable/avatar_background"
        android:layout_centerHorizontal="true"
        android:layout_height="80dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLanguage"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_settings_white"
            app:backgroundTint="@null"
            android:drawableStart="@drawable/language_icon"
            android:drawablePadding="10dp"
            android:text="@string/language"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="@font/manrope_bold"
            app:rippleColor="@color/grey_icon"
            />

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/right_arrow"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:id="@+id/unmenu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/down_arrow"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/view"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:layout_below="@id/menu_button_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/btn_green"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bld"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit"
        android:layout_below="@id/view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/btn_green"
        android:layout_width="133dp"
        android:layout_height="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="@string/edit"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bld"
            android:textColor="@color/white"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/delete"
        android:layout_below="@id/edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/button_red"
        android:layout_width="133dp"
        android:layout_height="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bld"
            android:textColor="#FA4D5E"
            android:textAlignment="center"
            />
    </LinearLayout>
</RelativeLayout>