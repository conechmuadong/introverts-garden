<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              tools:context=".fragments.CustomizedFragment"
              android:orientation="vertical"
        >
    <RelativeLayout
            android:id="@+id/field_list_title_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:background="@drawable/topplant"
            >
        <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_button"
                    android:layout_marginTop="20dp"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/tt_hoves_bold"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:text="@string/field_list_title"/>
        </LinearLayout>
        <TextView
                android:id="@+id/fieldName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:paddingLeft="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/bold_montserrat"
                />
    </RelativeLayout>
       <RelativeLayout
               android:layout_below="@id/field_list_title_layout"
               android:layout_height="wrap_content"
               android:layout_width="match_parent"
               android:orientation="vertical">
           <TextView
                   android:id="@+id/area"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="30dp"
                   android:text="@string/area_en"
                   android:fontFamily="@font/montserrat_bld"
                   android:textSize="15sp"/>
            <EditText
                    android:id="@+id/areaEditText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/area"
                    android:background="@drawable/edit_text_box"
                    android:padding="10dp"
                    android:hint="@string/area_en"
                    android:fontFamily="@font/montserrat"
                    android:textSize="15sp"
                    android:drawableStart="@drawable/flag"
                    android:drawableEnd="@drawable/m2"
                    />
              <TextView
                      android:id="@+id/number_holes_title"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="35dp"
                      android:layout_alignParentEnd="true"
                      android:text="@string/number_holes_en"
                      android:fontFamily="@font/montserrat_bld"
                      android:textSize="15sp"/>
                <EditText
                        android:id="@+id/numberHolesEditText"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/number_holes_title"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/edit_text_box"
                        android:padding="10dp"
                        android:hint="@string/no_of_holes_en"
                        android:drawableStart="@drawable/tap"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        />
                <TextView
                        android:id="@+id/distance_holes_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/areaEditText"
                        android:text="@string/distance_holes_en"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_bld"/>
                <EditText
                        android:id="@+id/distanceHoleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/distance_holes_title"
                        android:background="@drawable/edit_text_box"
                        android:padding="10dp"
                        android:hint="@string/distance_holes_en"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        android:drawableEnd="@drawable/m"/>
                <TextView
                        android:id="@+id/distance_row_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/distanceHoleEditText"
                        android:text="@string/distance_row_en"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_bld"/>
                <EditText
                        android:id="@+id/distanceRowEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/distance_row_title"
                        android:background="@drawable/edit_text_box"
                        android:padding="10dp"
                        android:hint="@string/distance_row_en"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        android:drawableEnd="@drawable/m"/>
                <TextView
                        android:id="@+id/drip_rate_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/distanceRowEditText"
                        android:text="@string/drip_rate_en"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_bld"/>
                <EditText
                        android:id="@+id/dripRateEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/drip_rate_title"
                        android:background="@drawable/edit_text_box"
                        android:padding="10dp"
                        android:hint="@string/drip_rate_en"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        android:drawableEnd="@drawable/mls"/>
                <TextView
                        android:id="@+id/rain_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/dripRateEditText"
                        android:text="@string/rain_en"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat_bld"/>
                <EditText
                        android:id="@+id/scaleRainEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/rain_title"
                        android:background="@drawable/edit_text_box"
                        android:padding="10dp"
                        android:hint="@string/rain_en"
                        android:fontFamily="@font/montserrat"
                        android:textSize="15sp"
                        android:drawableEnd="@drawable/percent"/>
           <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   android:layout_below="@id/scaleRainEditText"
                   android:layout_marginTop="10dp">

               <Button

                       android:id="@+id/updateButton"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/update_en"
                       android:layout_marginStart="80dp"
                       android:background="@drawable/button_green"
                       app:backgroundTint="@null"
                       android:letterSpacing="-0.001"
                       android:textColor="@color/white"
                       android:fontFamily="@font/montserrat_bld"
                     
               <Button
                       android:id="@+id/next"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toEndOf="@id/updateButton"
                       android:layout_marginStart="40dp"
                       android:text="@string/stage_change_en"
                       android:letterSpacing="-0.001"
                       app:backgroundTint="@null"
                       android:letterSpacing="-0.0001"
                       android:fontFamily="@font/bold_montserrat"
                       android:background="@drawable/button_white"
                       android:textColor="#43A047"
                       android:textSize="15sp"
                       tools:ignore="RelativeOverlap"/>
           </RelativeLayout>
       </RelativeLayout>

</RelativeLayout>