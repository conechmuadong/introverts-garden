<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/topplant"
            android:id="@+id/top_panel"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/bold_montserrat"
                android:text="@string/tips_for_garden"
                />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_panel"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            >
        <RelativeLayout
                android:id="@+id/tip_1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/avatar_background"
                >
            <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_1"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/tipthumbnail1"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/tip_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thumbnail_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_bld"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/tip1_title"/>
            <TextView
                    android:layout_below="@id/tip_title_1"
                    android:layout_toEndOf="@id/thumbnail_1"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip1_author"/>
            />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/tip_2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/avatar_background"
                android:layout_below="@id/tip_1"
                android:layout_marginTop="5dp"
                >
            <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_2"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/thumbnail2"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/tip_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thumbnail_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_bld"
                    android:textSize="11.5sp"
                    android:textColor="@color/black"
                    android:text="@string/tip2_title"/>
            <TextView
                    android:layout_below="@id/tip_title_2"
                    android:layout_toEndOf="@id/thumbnail_2"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip2_author"/>
            />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/tip_3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/avatar_background"
                android:layout_below="@id/tip_2"
                >
            <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_3"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/thumbnail5"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/tip_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thumbnail_3"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_bld"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/tip3_title"/>
            <TextView
                    android:layout_below="@id/tip_title_3"
                    android:layout_toEndOf="@id/thumbnail_3"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip3_author"/>
            />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/tip_4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/avatar_background"
                android:layout_below="@id/tip_3"
                >
            <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_4"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/thumbnail3"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/tip_title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thumbnail_4"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/montserrat_bld"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/tip4_title"/>
            <TextView
                    android:layout_below="@id/tip_title_4"
                    android:layout_toEndOf="@id/thumbnail_4"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip4_author"/>
            />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/tip_5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/avatar_background"
                android:layout_below="@id/tip_4"
                >
            <androidx.cardview.widget.CardView
                    android:id="@+id/thumbnail_5"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/thumbnail4"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/tip_title_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thumbnail_5"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/montserrat_bld"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/tip5_title"/>
            <TextView
                    android:layout_below="@id/tip_title_5"
                    android:layout_toEndOf="@id/thumbnail_5"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tip5_author"/>
            />
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_navigation"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/navigation_bar_background"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:foreground="@null"
            app:menu="@menu/navigation_bar"
            app:itemIconSize="30dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemRippleColor="@color/colorPrimary"
            app:labelVisibilityMode="unlabeled"
            app:itemBackground="@drawable/background_selector"
            />
</RelativeLayout>